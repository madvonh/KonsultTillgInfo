{
	"hosting": {
		"public": "public",
		"rewrites": [
			{
				"source": "**",
				"function": "app"
			}
		],
		"ignore": [
			"firebase.json",
			"**/.*",
			"**/node_modules/**",
			"*.iml"
		]
	},
	"functions": {
		"predeploy": [
			"npm --prefix \"$RESOURCE_DIR\" run lint"
		],
		"source": "functions"
	}
}
