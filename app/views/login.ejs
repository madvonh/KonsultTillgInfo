<!DOCTYPE html>
<html>
<head>
    <% include partials/template/head.ejs %>
    <link rel='stylesheet' href='/css/login.css'/>
</head>
<body>
<div class="container">
    <div class="row" id="pwd-container">
        <div class="col-lg-4"></div>
        <div class="col-lg-4">
            <section class="login-form">
                <form action="/login" , method="post" role="login">
                    <img src="/images/WEBSTEP_logo.png" class="img-responsive" width="200" alt=""/>
                    <input type="email" name="username" placeholder="Email" required class="form-control input-lg"/>
                    <input type="password" class="form-control input-lg" id="password" placeholder="Password"
                           name="password" required=""/>
                    <button type="submit" class="btn btn-lg btn-primary btn-block">Sign in</button>
                    <div>
                        <a href="/login/reset">Reset password</a>
                    </div>

                </form>
            </section>
        </div>
        <div class="col-lg-4"></div>
    </div>
</div>
</body>
</html>
